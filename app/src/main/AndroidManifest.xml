<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uw.playdesigner6" >
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application

        android:allowBackup="true"
        android:icon="@drawable/uw_basketball_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecordPlay"
            android:label="@string/title_activity_record_play"
            android:parentActivityName=".Splash" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uw.playdesigner6.Splash" />
        </activity>
    </application>

</manifest>
